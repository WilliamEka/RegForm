<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorAccent"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:id="@+id/editDate"
            android:hint="Pick Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cabang"
                android:layout_margin="5dp"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spinnerCabang"
                android:hint="Cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cabang"
                android:layout_margin="15dp"/>
        </LinearLayout>

        <EditText
            android:textColor="@color/colorAccent"
            android:id="@+id/editSpk"
            android:hint="No. SPK"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <EditText
            android:textColor="@color/colorAccent"
            android:id="@+id/editSalesName"
            android:hint="Nama Sales"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/editSalesPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="No. HP Sales"
            android:inputType="phone"
            android:textColor="@color/colorAccent" />

        <EditText
            android:textColor="@color/colorAccent"
            android:id="@+id/editCustName"
            android:hint="Nama Customer"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/editCustPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="No. HP Customer"
            android:inputType="phone"
            android:textColor="@color/colorAccent" />

        <Spinner
            android:id="@+id/spinnerJenis"
            android:hint="Jenis kendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/jenisKendaraan"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:id="@+id/luckyDip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucky Dip XPANDER"
                android:layout_margin="10dp"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spinnerLuckyDip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:entries="@array/luckyDip"
                android:hint="Cabang" />
        </LinearLayout>

        <EditText
            android:textColor="@color/colorAccent"
            android:id="@+id/editWarna"
            android:hint="Warna kendaraan"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity : "
                android:layout_margin="6dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/decrementBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_remove_black"/>

            <TextView
                android:id="@+id/editQty"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/incrementBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_add_black"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/editTandaJadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:inputType="number"
            android:hint="Tanda Jadi"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Pembayaran"
                android:layout_margin="10dp"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spinnerPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:entries="@array/jenisPembayaran"
                android:hint="Cabang" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift"
                android:layout_margin="10dp"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spinnerShift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:entries="@array/shift"
                android:hint="Cabang" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/textViewSignIn"
            android:text="New registration"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>